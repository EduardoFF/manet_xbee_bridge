// file: listener.cpp
//
// LCM example program.
//
// compile with:
//  $ gcc -o listener listener.cpp -llcm
//
// On a system with pkg-config, you can also use:
//  $ gcc -o listener listener.cpp `pkg-config --cflags --libs lcm`

#include <stdio.h>

#include <lcm/lcm-cpp.hpp>
#include "exlcm/route2_tree_t.hpp"

class Handler 
{
    public:
        ~Handler() {}

        void handleMessage(const lcm::ReceiveBuffer* rbuf,
                const std::string& chan, 
                const exlcm::route2_tree_t* msg)
        {
            printf("Received message on channel \"%s\":\n", chan.c_str());
            printf("  timestamp   = %lld\n", (long long)msg->timestamp);
            printf("  rtable:");
            for(int i = 0; i < msg->n; i++)
	    {		
		printf("  node   = %d\n",msg->rtable[i].node);
		for(int j = 0; j < msg->rtable[i].n; j++)
		{
			printf("  dest   = %s\n", msg->rtable[i].entries[j].dest);
			printf("  node   = %s\n", msg->rtable[i].entries[j].node);
			printf("  weight   = %d\n", msg->rtable[i].entries[j].weight);
		}
	    }
            printf("\n");
        }
};

int main(int argc, char** argv)
{
    lcm::LCM lcm;

    if(!lcm.good())
        return 1;

    Handler handlerObject;
    lcm.subscribe("EXAMPLE", &Handler::handleMessage, &handlerObject);

    while(0 == lcm.handle());

    return 0;
}
